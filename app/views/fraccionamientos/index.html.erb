<%= render 'layouts/header_normal' %>
<div class="row"></div>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <div class="content-wrapper" style="min-height: 100%">

        <section class="content">
          <div class="table table-bordered menu-principal">
            <div class="content-div">
              <h2>FRACCIONAMIENTOS</h2>
              <%= form_tag fraccionamientos_path, :method => 'get' do %>
                <div class="search-box">
                  <div>
                    <%= label_tag :buscador, "Buscar Fraccionamiento" %>
                    <%= text_field_tag :buscador , params[:buscador] %>
                    <%= image_submit_tag('iconos/buscar_black_24dp.png', :class=>"search-icon") %>
                  </div>
                  <div>
                    <%= link_to image_tag('iconos/add_white_24dp.png') +"AÃ‘ADIR FRACCIONAMIENTO" ,new_fraccionamiento_path, :class =>"button-link-form" %>
                  </div>
              </div>
              <% end %>
              <div class="div-container-table">
                <table>
                  <th>CLAVE</th>
                  <th>NOMBRE</th>
                  <th>ESTADO</th>
                  <th>ACCIONES</th>
                  <% @fracc.each do |fracc|%>
                  <tr>
                    <td class="dct-td-center"><%= fracc.clave %></td>
                    <td><%= fracc.nombre %></td>
                    <% if fracc.estado == 1 %>
                        <td class="td-activo">ACTIVA</td>
                    <% else %>
                        <td class="td-inactivo">INACTIVA</td>
                    <% end %>
                    <td class="dct-td-center">
                      <%= link_to image_tag('iconos/view_black_24dp.png') , fracc %>
                      <%= link_to image_tag('iconos/edit_black_24dp.png') , edit_fraccionamiento_path(fracc) %>
                      <%= link_to image_tag('iconos/delete_black_24dp.png') , fracc, method: :delete, data:{confirm: @mensajeborrar + fracc.nombre + "?"} %>
                    </td>

                  </tr>

                  <% end %>
                </table>
                <%= will_paginate @fracc %>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
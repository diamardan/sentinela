<%= render 'layouts/header_normal' %>

<div class="row"></div>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <div class="content-wrapper" style="min-height: 100%">

        <section class="content">
          <div class="table table-bordered menu-principal">
            <div class="content-div">
              <h2><%= action_name %> FRACCIONAMIENTO</h2>

              <div>
                <%= form_for(@fracc) do |f| %>
                    <ul class="flex-form">
                      <li>
                        <%= f.label :clave, "Clave" %>
                        <%= f.text_field :clave %>
                      </li>
                      <li>
                        <%= f.label :nombre, "Nombre" %>
                        <%= f.text_field :nombre %>
                      </li>
                      <li>
                        <%= f.label :numero_casas, "Numero de Casas" %>
                        <%= f.text_field :numero_casas %>
                      </li>
                      <li>
                        <%= f.label :estado ,"estado"%>
                        <%= f.check_box :estado %>
                      </li>
                      <li>
                        <div class="submit-btn-form">
                          <%= f.submit  button_txt, :class => "button button-blue" %>
                        </div>
                      </li>
                    </ul>
                <% end %>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
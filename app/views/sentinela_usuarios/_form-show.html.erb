<%= render 'layouts/header_normal' %>

<div class="row"></div>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <div class="content-wrapper" style="min-height: 100%">

        <section class="content">
          <div class="table table-bordered menu-principal">
            <div class="content-div">
              <h2><%= action_name %> USUARIO</h2>
              <div>
                <%= form_for(@u_sent) do |u|  %>
                    <ul class="flex-form">
                     <li>
                       <%= u.label :usuario, "Usuario :" %>
                       <%= u.text_field :usuario ,:disabled => true %>
                     </li>
                     <li>
                       <%= u.label :nombre, "Nombre :" %>
                       <%= u.text_field :nombre ,:disabled => true %>
                     </li>
                     <li>
                       <%= u.label :apellidos, "Apellidos :" %>
                       <%= u.text_field :apellidos ,:disabled => true %></li>
                      <li>
                       <%= u.label :password ,"Contraseña :"%>
                       <%= u.text_field :password ,:disabled => true %>
                      </li>
                      <li>
                       <%= u.label :email, "Correo Electrónico :" %>
                       <%= u.text_field :email ,:disabled => true %>
                      </li>
                      <li>
                       <%= u.label :celular, "Celular :" %>
                       <%= u.text_field :celular ,:disabled => true %>
                      </li>
                      <li>
                        <%= u.label :fraccionamiento, "Fraccionamiento :" %>
                        <%= u.select(:fraccionamiento) do %>
                            <% @fraccionamientos.each do |fr| %>
                                <% if @u_sent.fraccionamiento.present? && fr.id == @u_sent.fraccionamiento then %>
                                  <%= content_tag(:option, fr.nombre, value: fr.id ,:disabled => true , selected: fr.id) %>
                                <% else %>
                                  <%= content_tag(:option, fr.nombre, value: fr.id ,:disabled => true ) %>
                                <% end %>

                            <% end %>
                        <% end %>
                      </li>
                      <li>
                        <%= u.label :domicilio, "Domicilio :" %>
                        <%= u.text_field :domicilio ,:disabled => true %>
                      </li>
                      <li>
                        <%= u.label :calle, "Calle :" %>
                        <%= u.text_field :calle ,:disabled => true %>
                      </li>
                      <li>
                        <%= u.label :numero, "Numero :" %>
                        <%= u.text_field :numero ,:disabled => true %>
                      </li>
                    </ul>
                <% end %>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/header_normal' %>
<script type="text/javascript">
    $(function(){
        $('#fecha').datepicker({
            format: 'dd-mm-yyyy'
        }).on('changeDate',  function (ev) {
            $(this).datepicker('hide');
        });
    })
</script>
<div class="row"></div>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <div class="content-wrapper" style="min-height: 100%">

        <section class="content">
          <div class="table table-bordered menu-principal">
            <div class="content-div">
              <h2>BITACORA</h2>
              <%= form_tag url_for(:controller => 'bitacoras',:action =>'listar'), method: "get" do %>
              <ul class="flex-form">
                <li>
                  <%=  label_tag :nomber, "FRACCIONAMIENTO :" %>
                  <%=  select_tag :nomber, options_from_collection_for_select(@fracc,"id","nombre") %>
                </li>
                <li>
                  <%= label_tag :fecha, "FECHA" %>
                  <%= text_field_tag :fecha, nil, :data => {:provide => "datepicker" }%>
                </li>
                <li>
                  <div class="submit-btn-form">
                    <%= submit_tag "buscar" %>
                  </div>
                </li>
              </ul>
              <% end %>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
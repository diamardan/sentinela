<div class="wrap">
  <%= render 'layouts/footbar' %>
<div class="container">

  <div class="row">
    <div class="col-md-6 col-md-offset-1">
<!--      <div class="gallery">-->

        <div id="myCarousel" class="carousel slide">
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
          </ol>

          <div class="carousel-inner">
            <div class="item active">
              <img src="<%= asset_path('gallery/plano.jpg') %>">
              <div class="container img-responsive center-block">
              </div>
            </div>
            <div class="item">
              <img src="<%= asset_path('gallery/casa1.png') %>">
            </div>
            <div class="item">
              <img src="<%= asset_path('gallery/casa2.jpg') %>">
            </div>
            <div class="item">
              <img src="<%= asset_path('gallery/casa3.jpg') %>">
            </div>
          </div>

          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </a>

          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>

        <!--</div>-->

      </div>

    </div>

<div class="new_user"></div>
  <div class="col-md-5">
    <!--<div class="form-container">-->
    <!--<div class="form-container">-->
      <div class="header-login-form">
        <img src="<%= asset_path('sentinela/LogoSentinela.png')%>" class="img-responsive img-logo-home" >
      </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group field-login-form-login" >
            <%= f.text_field :email, autofocus: true,  placeholder: "Usuario / email", class:"form-control" %>
          </div>
          <div class="form-group field-login-form-login" >
            <%= f.password_field :password,  placeholder:"Contraseña",class:"form-control" %>
          </div>
        <div class="form-group field-login-form-login" >
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me, class: "icheck-me", data:{skin:"square", color:"blue"}%>
              <%= f.label :remember_me, " Recuérdeme la próxima vez" %>
            </div>
          <% end -%>
        </div>
        <div class="form-group field-login-form-login" >
          <div class="div-btn-actions">
            <%= f.submit "Iniciar Sesion", class:"button-link-form blue" %>
            <%= link_to "Registrarse", new_registration_path(resource_name) ,class: "button-link-form black" %>
            <% #link_to "Registrarse", new_registration_path(resource_name) ,class: "button-link-form black" %>
          </div>
        <% end %>
    <div class="link-login-left">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  </div>

</div>
</div>